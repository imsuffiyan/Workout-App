<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/bg_theme_gradient"
     tools:context="com.fitness.workout.ui.workouts.WorkoutDetailFragment">

     <!-- Hero image with back button -->
     <androidx.appcompat.widget.AppCompatImageView
         android:id="@+id/heroImage"
         android:layout_width="0dp"
         android:layout_height="220dp"
         android:scaleType="centerCrop"
         android:src="@drawable/ic_launcher_foreground"
         android:contentDescription="@string/header_image_cd"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/heroImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/workout_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icTimerSmall"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/text_secondary"
                    android:contentDescription="@string/fire_cd" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timer_default"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="6dp" />

                <View android:layout_width="12dp" android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_beginner"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <View android:layout_width="12dp" android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icTag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_workout"
                    android:tint="@color/text_secondary"
                    android:contentDescription="@string/workout_thumbnail_cd" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/describe_text"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icFire"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_fire"
                            android:tint="@color/accent_orange"
                            android:contentDescription="@string/fire_cd" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/calorie_burn"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:tint="#E91E63" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/yoga_mat"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Instructor row -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="@string/profile_avatar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInstructorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instructor_label"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInstructorBio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instructor_bio"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercises header -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvExercisesCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exercises_count"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <!-- RecyclerView for exercises -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Start button and timer (anchored to bottom) -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnOpenPlayer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_play"
        android:tint="@color/white"
        android:contentDescription="@string/play_cd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/let_s_start"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_rounded_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_theme_gradient"
    tools:context="com.fitness.workout.ui.workouts.WorkoutPlayerFragment">

    <!-- Top status pill: timer | calories | index -->
    <LinearLayout
        android:id="@+id/topStatus"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/btn_gradient_pink"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvPlayerTimer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <View android:layout_width="1dp" android:layout_height="24dp" android:background="#33FFFFFF" />

        <TextView
            android:id="@+id/tvPlayerCalories"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0 kcal"
            android:textColor="@color/white"
            android:gravity="center" />

        <View android:layout_width="1dp" android:layout_height="24dp" android:background="#33FFFFFF" />

        <TextView
            android:id="@+id/tvPlayerIndex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1/0"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>

    <!-- VideoView to play raw/video for current exercise. Hidden by default; shown when we have a playable video -->
    <VideoView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlayerPlay"
        app:layout_constraintTop_toBottomOf="@id/topStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintHeight_percent="0.6"
        android:visibility="gone"
        android:contentDescription="@string/exercise_video_cd" />

    <!-- Play controls overlay -->
    <ImageButton
        android:id="@+id/btnPlayerPlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/circle_bg"
        android:contentDescription="@string/play_cd"
        android:src="@drawable/ic_play"
        android:translationY="-36dp"
        app:layout_constraintBottom_toTopOf="@+id/controlsRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />

    <!-- Prev / Next row -->
    <LinearLayout
        android:id="@+id/controlsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prev" />

        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

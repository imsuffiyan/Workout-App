<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/bg_theme_gradient"
     tools:context="com.fitness.workout.ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Program / 21-day challenge card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                android:foreground="?attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Left content: day, title, timer/difficulty, continue button -->
                    <LinearLayout
                        android:id="@+id/leftColumn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/exerciseImage"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:id="@+id/tvDayLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_label"
                            android:textAllCaps="true"
                            android:textColor="#FF6A7A"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDayCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_counter"
                            android:textColor="#FF3D6F"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slimmer_title"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />

                        <!-- Replaced ImageView+TextView row with a single TextView using a compound drawable -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTimerDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/timer_difficulty"
                            android:textColor="#616161"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_timer_black_24dp"
                            android:drawablePadding="6dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <!-- Continue button -->
                        <LinearLayout
                            android:id="@+id/btnContinue"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/btn_gradient_pink"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_play"
                                android:contentDescription="@string/play_cd"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/continue_label"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Right image -->
                    <ImageView
                        android:id="@+id/exerciseImage"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="@string/exercise_cd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- Focus Area title -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFocusTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/focus_area"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="#212121"
                android:paddingVertical="12dp" />

            <!-- 2x2 grid of focus cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="121dp"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBooty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/booty"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBootySub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="@string/booty_sub"
                            android:textColor="#616161"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvBooty" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgBooty"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:contentDescription="@string/booty_image_cd"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLeg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/leg"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLegSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="@string/leg_sub"
                            android:textColor="#616161"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvLeg" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgLeg"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/leg_image_cd"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAbs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/abs"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAbsSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="@string/abs_sub"
                            android:textColor="#616161"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvAbs" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgAbs"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/abs_image_cd"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvShoulder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/shoulder"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvShoulderSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="@string/shoulder_sub"
                            android:textColor="#616161"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvShoulder" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgShoulder"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/shoulder_image_cd"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Popular Recipe Plans title -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popular_recipe_plans"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="#212121"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="12dp" />

            <!-- 2x2 colored recipe cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:background="#BFEAF5">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPlan1500"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/plan_1500"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#0277BD"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPlan1500Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/plan_1500_sub"
                            android:textSize="13sp"
                            android:textColor="#01579B"
                            android:paddingTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPlan1500"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgPlan1500"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/plan_1500_image_cd"
                            android:adjustViewBounds="true" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icFire1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_fire"
                            android:tint="#FFFFFF"
                            android:backgroundTint="#FF6A3E"
                            android:padding="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:background="#FADBD8">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReducedFat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/reduced_fat"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#C62828"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReducedFatSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/reduced_fat_sub"
                            android:textSize="13sp"
                            android:textColor="#C62828"
                            android:paddingTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvReducedFat"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgReducedFat"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/reduced_fat_image_cd"
                            android:adjustViewBounds="true" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icFire2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_fire"
                            android:tint="#FFFFFF"
                            android:backgroundTint="#FF6A3E"
                            android:padding="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"

                    android:background="#FFE3C5">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCarbLite"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/carb_lite"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#EF6C00"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCarbLiteSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/carb_lite_sub"
                            android:textSize="13sp"
                            android:textColor="#EF6C00"
                            android:paddingTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvCarbLite"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgCarbLite"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/carb_lite_image_cd"
                            android:adjustViewBounds="true" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icFire3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_fire"
                            android:tint="#FFFFFF"
                            android:backgroundTint="#FF6A3E"
                            android:padding="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"

                    android:background="#DFF7E1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVeggieBliss"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/veggie_bliss"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2E7D32"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVeggieBlissSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/veggie_bliss_sub"
                            android:textSize="13sp"
                            android:textColor="#2E7D32"
                            android:paddingTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvVeggieBliss"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgVeggieBliss"

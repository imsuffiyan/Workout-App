<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Vertical gradient background used as an app theme background -->
    <gradient
        android:startColor="#FFFAFAFA"
        android:centerColor="#FFF5F7FB"
        android:endColor="#FFEAF2FB"
        android:angle="270" />

    <!-- Optional subtle top shadow using a stroke with alpha color -->
    <stroke android:width="0dp" android:color="#00000000" />
    <corners android:radius="0dp" />
</shape>
